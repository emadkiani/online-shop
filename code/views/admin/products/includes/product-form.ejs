<form action="<%=submitPath%>?_csrf=<%=locals.csrfToken%>" method="POST" enctype="multipart/form-data"
    class="cart main-form">
    <p>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%=product.title%>" required>
    </p>
    <p>
        <label for="brand">Brand</label>
        <input type="text" id="brand" name="brand" value="<%=product.brand%>" required>
    </p>
    <p>
        <select name="category">
            <option value="phone" <%if (product.category === 'phone') {%>selected<%}%>>Smart Phone</option>
            <option value="laptop" <%if (product.category === 'laptop') {%>selected<%}%>>Laptop</option>
            <option value="tablet" <%if (product.category === 'tablet') {%>selected<%}%>>Tablet</option>
            <option value="consol" <%if (product.category === 'consol') {%>selected<%}%>>Consol</option>
        </select>
    </p>
    <div id="image-upload-control">
        <p>
            <label for="image">Image</label>
            <input id="image-picker" type="file" id="image" name="image" accept="image/png,image/jpg" <%if (imageRequired) {%>required<%}%>>
        </p>
        <img id="image-preveiw" src="" alt="Selected image.">
    </div>
    <p>
    <label for="price">Price</label>
    <input type="number" id="price" name="price" value="<%=product.price%>" min="0.00" step="0.01" required>
    </p>
    <p>
        <label for="discount">Discount</label>
        <input type="number" id="discount" name="discount" value="<%=product.discount%>" min="0.00" step="0.00"
            required>
    </p>
    <p>
        <label for="quantity">Quantity</label>
        <input type="number" id="quantity" name="quantity" value="<%=product.quantity%>" min="0" step="1" required>
    </p>
    <p>
        <label for="summary">Summary</label>
        <input type="text" id="summary" name="summary" value="<%=product.summary%>" required maxlength="250">
    </p>
    <p>
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="7" resize required><%=product.description%></textarea>
    </p>
    <div class="prodcut-action">
        <button class="btn btn-primary">Save</button>
        <button type="reset" class="btn btn-alt-secondary">Reset</button>
    </div>
</form>