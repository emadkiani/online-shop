<!DOCTYPE html>
<html lang="en">

    <head>
        <%-include('../../shared/includes/head', { pageTitle: 'Signup (Admin)' })%>
        <link rel="stylesheet" href="/styles/forms.css" />
    </head>

    <body>
        <%-include('../../shared/includes/header')%>
        <main>
            <div class="info-container">
                <h1>Signup (Admin)</h1>
            </div>
            <%if (inputData.errorMessage) {%>
            <div class="alert">
                <h2>Invalid Input</h2>
                <p><%=inputData.errorMessage%></p>
            </div>
            <%}%>
            <form action="/auth/signup-admin" method="POST" class="cart main-form">
                <input type="hidden" name="_csrf" value="<%=locals.csrfToken%>" />
            <p>
                <label for="email">E-Mail</label>
                <input type="email" id="email" name="email" value="<%=inputData.email%>" required />
            </p>
            <p>
                <label for="confirm-email">Confirm Email</label>
                <input type="email" id="confirm-email" name="confirm-email" value="<%=inputData.confirmEmail%>"
                    required />
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" minlength="6" value="<%=inputData.password%>"
                    required />
            </p>
            <hr />
            <p>
                <label for="fullname">Full Name</label>
                <input type="text" id="fullname" name="fullname" value="<%=inputData.fullname%>" required />
            </p>
            <div class="prodcut-action">
                <button class="btn btn-primary">Submit</button>
                <a href="/auth/login-admin" class="btn btn-alt-secondary">Login instead</a>
            </div>
            </form>
        </main>
        <%-include('../../shared/includes/footer')%>
    </body>

</html>